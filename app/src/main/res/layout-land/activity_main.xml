<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">


    <org.opencv.android.JavaCameraView
        android:id="@+id/main_activity_java_surface_view"
        android:layout_width="457dp"
        android:layout_height="447dp"
        android:layout_column="0"
        android:layout_row="0"
        android:visibility="visible"
        opencv:camera_id="1"
        opencv:show_fps="true"
        android:layout_marginLeft="8dp"
        opencv:layout_constraintLeft_toLeftOf="parent"
        opencv:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        opencv:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        opencv:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        opencv:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        opencv:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="Button"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="473dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:layout_column="1"
            android:layout_row="3"
            android:text="TextView"
            tools:layout_editor_absoluteX="649dp"
            tools:layout_editor_absoluteY="401dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        opencv:layout_constraintRight_toLeftOf="@+id/linearLayout"
        android:layout_marginRight="8dp"
        opencv:layout_constraintLeft_toRightOf="@+id/main_activity_java_surface_view"
        android:layout_marginLeft="8dp"
        opencv:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        opencv:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/imgToFind"
            android:layout_width="224dp"
            android:layout_height="167dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView"
            android:layout_column="2"
            android:layout_marginEnd="14dp"
            android:layout_row="0"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            opencv:srcCompat="@color/colorPrimary"
            tools:layout_editor_absoluteX="595dp"
            tools:layout_editor_absoluteY="228dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="223dp"
            android:layout_height="167dp"
            android:layout_alignLeft="@+id/imgToFind"
            android:layout_alignStart="@+id/imgToFind"
            android:layout_below="@+id/imgToFind"
            android:layout_column="2"
            android:layout_marginTop="13dp"
            android:layout_row="1"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_bright"
            opencv:srcCompat="@android:color/background_dark"
            tools:layout_editor_absoluteX="704dp"
            tools:layout_editor_absoluteY="239dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>