<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <org.opencv.android.JavaCameraView
        android:id="@+id/main_activity_java_surface_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        opencv:camera_id="1"
        opencv:show_fps="true"
        android:layout_marginBottom="0dp"
        opencv:layout_constraintBottom_toTopOf="@+id/imgToFind"
        opencv:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        opencv:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        opencv:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imgToFind"
        android:layout_width="252dp"
        android:layout_height="259dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        opencv:layout_constraintLeft_toLeftOf="parent"
        opencv:layout_constraintRight_toRightOf="parent"
        opencv:srcCompat="@color/colorPrimary"
        opencv:layout_constraintBottom_toTopOf="@+id/button"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        opencv:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="-67dp"
        opencv:layout_constraintRight_toRightOf="parent"
        opencv:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>